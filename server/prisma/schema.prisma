// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model vehicle {
  id          Int      @id @default(autoincrement())
  name        String
  brand       String
  phot_url    String   @default("https://www.shutterstock.com/image-illustration/silhouette-prototype-passenger-car-front-260nw-1988819618.jpg")
  year        Int
  description String
  sold        Boolean
  image       String   @default("https://www.ofertadia.com.br/wp-content/themes/deals/images/store-default.png")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}
